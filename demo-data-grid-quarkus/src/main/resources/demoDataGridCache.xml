<?xml version="1.0"?>
<distributed-cache name="demo-data-grid" l1-lifespan="60000" l1-cleanup-interval="180000" mode="SYNC" remote-timeout="17500" statistics="true">
    <encoding>
        <key media-type="application/x-protostream"/>
        <value media-type="application/x-protostream"/>
    </encoding>
    <locking concurrency-level="1000" acquire-timeout="15000" striping="false"/>
    <expiration lifespan="300000" max-idle="120000"/>
    <memory storage="OFF_HEAP" max-size="256MB" when-full="REMOVE"/>
    <state-transfer timeout="60000"/>
</distributed-cache>